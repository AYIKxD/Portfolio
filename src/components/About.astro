    grid-column: span 2;

    @media (max-width: 900px) {
      grid-column: span 1;
    }
  }

  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .experience-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .experience-role {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text-main);
  }

  .experience-company {
    padding: 0.25rem 0.5rem;
    background: rgba(105, 117, 101, 0.2);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
