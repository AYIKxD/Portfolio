    font-size: 0.8rem;
    color: var(--color-text-main);
    opacity: 0.5;
    margin-bottom: 0.75rem;
  }

  .experience-desc {
    font-size: 0.95rem;
    color: var(--color-text-main);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0;
  }

  // Honors
  .honors-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .honor-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(236, 223, 204, 0.06);

    &:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }
  }

  .honor-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;

    @media (max-width: 600px) {
      flex-direction: column;
      gap: 0.25rem;
    }
  }

  .honor-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-main);
