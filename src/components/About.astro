  }

  .honor-desc {
    font-size: 0.9rem;
    color: var(--color-text-main);
    opacity: 0.7;
    margin: 0;
    line-height: 1.5;
  }

  // Goals
  .goals-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin: 0;
    padding: 0;
    list-style: none;

    @media (max-width: 600px) {
      grid-template-columns: 1fr;
    }
  }

  .goal-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(105, 117, 101, 0.08);
    border-radius: 6px;
    transition: all 0.2s ease;

    &:hover {
      background: rgba(105, 117, 101, 0.12);
    }
  }

  .goal-number {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-accent);
    opacity: 0.7;
  }

  .goal-text {
    font-size: 0.9rem;
    color: var(--color-text-main);
    line-height: 1.5;
  }
</style>
