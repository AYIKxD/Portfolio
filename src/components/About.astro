    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    padding: 0.375rem 0.75rem;
    background: rgba(105, 117, 101, 0.15);
    border: 1px solid rgba(105, 117, 101, 0.25);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-main);
    transition: all 0.2s ease;

    &:hover {
      background: rgba(105, 117, 101, 0.25);
      border-color: var(--color-accent);
    }
  }

  // Education
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .education-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .education-degree {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text-main);
  }

  .education-university {
    font-size: 1rem;
    color: var(--color-accent);
  }

  .education-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--color-text-main);
    opacity: 0.7;
  }

  // Certificates
  .certs-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cert-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(
      135deg,
      rgba(255, 153, 0, 0.2),
      rgba(255, 153, 0, 0.1)
    );
    border: 1px solid rgba(255, 153, 0, 0.3);
    border-radius: 8px;
    font-family: var(--font-display);
    font-size: 0.75rem;
