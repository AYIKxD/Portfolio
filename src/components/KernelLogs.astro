<section id="logs" class="s-logs" data-intersect>
  <div class="s-logs__container">
    <header class="s-logs__header">
      <div class="section-badge js-fade">
        <span class="badge-text">Notes</span>
      </div>
      <div class="title-wrapper">
        <h2 class="section-title js-title">Kernel Logs</h2>
      </div>
      <p class="section-desc js-desc">
        Thoughts on low-level engineering and decentralized finance. Documenting
        the journey.
      </p>
    </header>

    <div class="s-logs__list">
      {
        posts.map((post, index) => (
          <article class="post js-post" data-index={index}>
            <div class="post__number">{String(index + 1).padStart(2, '0')}</div>

            <div class="post__content">
              <div class="post__meta">
                <span
                  class={`post__category cat-${post.category.toLowerCase()}`}
                >
                  {post.category}
                </span>
                <span class="post__date">{post.date}</span>
                <span class="post__read">{post.readTime}</span>
              </div>

              <h3 class="post__title">{post.title}</h3>
              <p class="post__excerpt">{post.excerpt}</p>

              <div class="post__footer">
                <div class="post__tags">
                  {post.tags.map((tag) => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
                <a href={`/blog/${post.id}`} class="post__link">
                  <span>Read more</span>
                  <svg
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12,5 19,12 12,19" />
                  </svg>
                </a>
              </div>
            </div>

            <div class="post__line" />
          </article>
        ))
      }
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  import { Splitter } from '../utils/Splitter'
  gsap.registerPlugin(ScrollTrigger)

  class KernelLogs {
    el: HTMLElement
    title: HTMLElement
    desc: HTMLElement
    posts: NodeListOf<HTMLElement>
    fade: HTMLElement

    constructor() {
      this.el = document.querySelector('.s-logs')!
      this.title = this.el.querySelector('.js-title')!
      this.desc = this.el.querySelector('.js-desc')!
      this.posts = this.el.querySelectorAll('.js-post')
      this.fade = this.el.querySelector('.js-fade')!

      this.initAnimations()
    }

    initAnimations() {
      // Split Title
      Splitter.split({ element: this.title, type: 'chars' })
      const chars = this.title.querySelectorAll('.split-char')

      // Split Desc
      Splitter.split({ element: this.desc, type: 'words' })
      const words = this.desc.querySelectorAll('.split-word')

      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: this.el,
          start: 'top 75%',
        },
      })

      // Badge Fade
      tl.fromTo(
        this.fade,
        { opacity: 0, y: 20 },
        { opacity: 1, y: 0, duration: 0.6 },
      )

      // Title Reveal
      tl.fromTo(
        chars,
        { y: 100, rotateX: -90, opacity: 0 },
        {
          y: 0,
          rotateX: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.03,
          ease: 'power3.out',
        },
        '-=0.4',
      )

      // Desc Reveal
      tl.fromTo(
        words,
        { y: 20, opacity: 0 },
        {
          y: 0,
          opacity: 0.6,
          duration: 0.6,
          stagger: 0.01,
          ease: 'power2.out',
        },
        '-=0.6',
      )

      // Posts Reveal
      this.posts.forEach((post, index) => {
        gsap.fromTo(
          post,
          { x: index % 2 === 0 ? -40 : 40, opacity: 0 },
          {
            x: 0,
            opacity: 1,
            duration: 1,
            ease: 'power3.out',
            scrollTrigger: {
              trigger: post,
              start: 'top 85%',
            },
          },
        )
      })
    }
  }

  new KernelLogs()
</script>

