<section class="s-philosophy" data-intersect>
  <!-- Floating Particles -->
  <div class="particles js-particles">
    {
      Array.from({ length: 20 }).map((_, i) => (
        <div
          class="particle"
          data-index={i}
          style={`--delay: ${i * 0.3}s; --x: ${Math.random() * 100}%; --y: ${Math.random() * 100}%`}
        />
      ))
    }
  </div>

  <!-- Scroll Progress Indicator -->
  <div class="scroll-progress js-progress">
    <div class="scroll-progress__track">
      <div class="scroll-progress__fill js-progress-fill"></div>
    </div>
    <div class="scroll-progress__markers">
      <span class="marker" data-label="01"></span>
      <span class="marker" data-label="02"></span>
      <span class="marker" data-label="03"></span>
      <span class="marker" data-label="04"></span>
      <span class="marker" data-label="05"></span>
    </div>
  </div>

  <!-- Decorative Lines -->
  <div class="deco-lines">
    <div class="deco-line deco-line--left"></div>
    <div class="deco-line deco-line--right"></div>
  </div>

  <div class="s-philosophy__container">
    <div class="s-philosophy__content">
      <ul class="list js-list">
        <li class="list-item quote">
          Automate Everything: If I have to do it twice, I write a script for
          it.
        </li>
        <li class="list-item quote">
          Trust Code, Verify Blocks: Applying systems thinking to financial
          independence.
        </li>
        <li class="list-item quote">
          Deep Learning: Whether it's a kernel panic or a smart contract bug, I
          fix it by understanding the root cause.
        </li>
        <li class="list-item quote">
          I don't just use systems; I compile them.
        </li>
        <li class="list-item quote">
          Building systems. Compiling value. Still curious.
        </li>
      </ul>
    </div>
  </div>

  <!-- Active Quote Counter -->
  <div class="quote-counter js-counter">
    <span class="quote-counter__current js-counter-current">01</span>
    <span class="quote-counter__sep">/</span>
    <span class="quote-counter__total">05</span>
  </div>
</section>

<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  gsap.registerPlugin(ScrollTrigger)

  class Philosophy {
    el: HTMLElement
    list: HTMLElement
    items: HTMLElement[]
    progressFill: HTMLElement
    markers: NodeListOf<HTMLElement>
    counter: HTMLElement
    particles: NodeListOf<HTMLElement>

    constructor() {
      this.el = document.querySelector('.s-philosophy')!
      this.list = this.el.querySelector('.js-list')!
      this.items = gsap.utils.toArray('.s-philosophy .quote')
      this.progressFill = this.el.querySelector('.js-progress-fill')!
      this.markers = this.el.querySelectorAll('.marker')
      this.counter = this.el.querySelector('.js-counter-current')!
      this.particles = this.el.querySelectorAll('.particle')

      this.initAnimations()
      this.initParticles()
    }

    initParticles() {
      // Animate particles floating
      this.particles.forEach((particle, i) => {
        gsap.to(particle, {
          y: 'random(-50, 50)',
          x: 'random(-30, 30)',
          duration: 'random(3, 6)',
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut',
          delay: i * 0.2,
        })
      })
    }

    initAnimations() {
      const amount = this.items.length

      // Pin the section while scrolling through items
      // Start pin below the header (80px offset)
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: this.el,
          start: 'top 80px', // Start below header
          end: `+=${amount * 100}%`,
          scrub: 0.5,
          pin: true,
          pinSpacing: true,
          onUpdate: (self) => {
            // Update progress bar
            gsap.to(this.progressFill, {
              scaleY: self.progress,
              duration: 0.1,
            })

            // Update counter
            const activeIndex = Math.min(
              Math.floor(self.progress * amount),
              amount - 1,
            )
            this.counter.textContent = String(activeIndex + 1).padStart(2, '0')

            // Update markers
            this.markers.forEach((marker, i) => {
              marker.classList.toggle('is-active', i <= activeIndex)
              marker.classList.toggle('is-current', i === activeIndex)
            })
          },
        },
      })

      // Fade in (stagger 0.5) -> Fade out/dim (stagger 0.5)
      tl.to(this.items, {
        stagger: 0.5,
        opacity: 1,
        y: 0,
        filter: 'blur(0px)',
        scale: 1,
      }).to(
        this.items,
        {
          stagger: 0.5,
          opacity: (i) => (i < amount - 1 ? 0.15 : 1),
          filter: (i) => (i < amount - 1 ? 'blur(3px)' : 'blur(0px)'),
          scale: (i) => (i < amount - 1 ? 0.98 : 1),
        },
        0.5,
      )
    }
  }

  new Philosophy()
</script>

<style lang="scss">
  .s-philosophy {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    overflow: hidden;
  }

  /* Floating Particles */
  .particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .particle {
    position: absolute;
    left: var(--x);
    top: var(--y);
    width: 4px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 50%;
    opacity: 0.2;
    animation: particle-pulse 3s ease-in-out infinite;
    animation-delay: var(--delay);

    &:nth-child(odd) {
      width: 6px;
      height: 6px;
      opacity: 0.15;
    }

    &:nth-child(3n) {
      width: 2px;
      height: 2px;
      opacity: 0.3;
      background: var(--color-text-main);
    }
  }

  @keyframes particle-pulse {
    0%,
    100% {
      opacity: 0.1;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.5);
    }
  }

  /* Scroll Progress Indicator */
  .scroll-progress {
    position: absolute;
    left: 3rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 10;

    @media (max-width: 768px) {
      left: 1rem;
    }
  }

  .scroll-progress__track {
    width: 2px;
    height: 200px;
    background: rgba(236, 223, 204, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .scroll-progress__fill {
    width: 100%;
    height: 100%;
    background: var(--color-accent);
    transform-origin: top;
    transform: scaleY(0);
  }

  .scroll-progress__markers {
    display: flex;
    flex-direction: column;
    gap: 38px;
    margin-left: 0.5rem;
  }

  .marker {
    font-family: var(--font-display);
    font-size: 0.65rem;
    color: var(--color-text-main);
    opacity: 0.3;
    transition: all 0.3s ease;
    position: relative;

    &::before {
      content: attr(data-label);
    }

    &.is-active {
      opacity: 0.6;
    }

    &.is-current {
      opacity: 1;
      color: var(--color-accent);
      transform: scale(1.2);
    }
  }

  /* Decorative Lines */
  .deco-lines {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .deco-line {
    position: absolute;
    top: 10%;
    height: 80%;
    width: 1px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(236, 223, 204, 0.05) 20%,
      rgba(236, 223, 204, 0.05) 80%,
      transparent
    );

    &--left {
      left: 15%;
    }

    &--right {
      right: 15%;
    }

    @media (max-width: 768px) {
      display: none;
    }
  }

  /* Quote Counter */
  .quote-counter {
    position: absolute;
    right: 3rem;
    top: 50%;
    transform: translateY(-50%);
    font-family: var(--font-display);
    font-size: 0.85rem;
    color: var(--color-text-main);
    opacity: 0.6;
    z-index: 10;

    @media (max-width: 768px) {
      right: 1rem;
      font-size: 0.75rem;
    }
  }

  .quote-counter__current {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .quote-counter__sep {
    margin: 0 0.25rem;
    opacity: 0.4;
  }

  .s-philosophy__container {
    position: relative;
    z-index: 5;
    width: 100%;
    margin: 0 auto;
    max-width: 900px;
    padding: 0 6rem;

    @media (max-width: 768px) {
      padding: 0 3rem;
    }
  }

  .s-philosophy__content {
    display: flex;
    justify-content: center;
  }

  .list {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
  }

  .list-item {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 3rem);
    line-height: 1.3;
    font-weight: 700;
    letter-spacing: -0.02em;
    display: inline;
    margin-right: 0.3em;
    color: var(--color-text-main);
    opacity: 0.1;
    transform: translateY(20px);
    filter: blur(4px);
    will-change: opacity, transform, filter;
  }
</style>
